{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        // // "jsx": "preserve",
        "jsx": "preserve",
        "jsxImportSource": "vue",
        // /* Linting */
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "checkJs": true,
        "types": [],
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "~/libs/*": [
                "./src/libs/*"
            ],
        }
    },
    "include": [
        "tools/**/*.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "root": ".",
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}